{
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "./dist",
    "lib": ["es2015", "esnext", "dom"],
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "node",
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
